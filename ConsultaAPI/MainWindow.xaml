<Window x:Class="ConsultaNaval.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Consulta Naval" Height="500" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">

                <TextBlock Text="Seleccione Unidad: " FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="comboBases" Width="300" Margin="0,0,0,10"
                          DisplayMemberPath="name" SelectedValuePath="code"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Fecha Inicial:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker x:Name="fechaInicial" Width="150" Margin="0,0,10,0"/>
                <TextBlock Text="Fecha Final:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker x:Name="fechaFinal" Width="150"/>
            </StackPanel>

            <Button x:Name="btnConsultar" Content="Consultar" Width="100" 
                    IsEnabled="False" Click="btnConsultar_Click" Margin="0,0,0,10"/>

            <TextBlock x:Name="txtResultados" Text="Resultados ()" FontWeight="Bold" Margin="0,0,0,10"/>
            <DataGrid x:Name="dataGrid" AutoGenerateColumns="False"
                      AlternatingRowBackground="LightGray"
                      RowBackground="White" Height="350">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Unit Code" Binding="{Binding unitCode}" />
                    <DataGridTextColumn Header="Task Code" Binding="{Binding taskCode}" />
                    <DataGridTextColumn Header="Function Code" Binding="{Binding funCode}" />
                    <DataGridTextColumn Header="Execution Date" Binding="{Binding taskExecutionDate}" />
                    <DataGridTextColumn Header="Status" Binding="{Binding taskExecutionStatusCode}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding taskExecutionStatusCode}" Value="P">
                                        <Setter Property="Background" Value="LightGreen"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>